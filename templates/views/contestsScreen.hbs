            <div class="duration">
              <a href="#"  class = "parameters_anchor" >Duration:</a>
              <div class="duration_parameters">
                <table = "filter_table">
                  <tr>
                    <th>
                      <input type="checkbox" id="less_than_1hr" name="less_than_1hr" value="less_than_1hr">
                      <label for="Less_than_1hr"> Less than 2hr </label><br>
                    </th>
                    <th>
                      <input type="checkbox" id="less_than_2hr" name="less_than_2hr" value="less_than_2hr">
